         version="3.0">
    <display-name>BL-API</display-name>

    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>BLApi</param-value>
    </context-param>

    <context-param>
        <param-name>spring.profiles.active</param-name>
        <param-value>dev</param-value>
    </context-param>

    <context-param>
